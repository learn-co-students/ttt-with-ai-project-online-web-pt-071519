#!/usr/bin/env ruby

require_relative '../config/environment'

 puts  "Welcome to Tic-Tac-Toe!" 
 puts  "Shall we play a Game!"
 puts  "which game would you like to play 0, 1, or 2?"
 input = gets.strip
 if input == "0"
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
 elsif input == "1"
 end
 game.play